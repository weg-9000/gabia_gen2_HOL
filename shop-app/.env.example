# 애플리케이션 설정
APP_NAME=Gabia Shopping Mall API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 데이터베이스 설정 (개발 환경 - Postgres)
DATABASE_URL=postgresql://shopuser:shoppass@localhost:5432/shopdb


# PostgreSQL 설정 (프로덕션 환경 - Lab 3에서 사용)
POSTGRES_USER=shopuser
POSTGRES_PASSWORD=shoppass
POSTGRES_DB=shopdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# CORS 설정
ALLOWED_ORIGINS=["*"]

# JWT 설정 (향후 사용)
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 파일 업로드 설정 (Lab 4에서 사용)
UPLOAD_DIR=/mnt/nas-shared/images
MAX_UPLOAD_SIZE=5242880

# 페이지네이션
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
